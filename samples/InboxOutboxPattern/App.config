<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!-- Reference to shared App.config -->
  <appSettings file="../App.config" />
  <connectionStrings configSource="../App.config" />
  
  <!-- Local application-specific settings -->
  <appSettings>
    <add key="ApplicationName" value="InboxOutboxPattern" />
    <add key="ProcessingInterval" value="5000" />
    <add key="MaxRetryCount" value="3" />
  </appSettings>
  
  <!-- AWS RDS SQL Server connection -->
  <connectionStrings>
    <add name="DefaultConnection" 
         connectionString="Server=your-aws-rds-instance.region.rds.amazonaws.com,1433;Database=InboxOutboxDemo;User Id=admin;Password=YourSecurePassword123!;TrustServerCertificate=true;Connection Timeout=30;Command Timeout=300;" 
         providerName="Microsoft.Data.SqlClient" />
    
    <!-- Alternative connection for local development -->
    <add name="LocalConnection" 
         connectionString="Server=(localdb)\mssqllocaldb;Database=InboxOutboxDemo;Integrated Security=true;TrustServerCertificate=true;" 
         providerName="Microsoft.Data.SqlClient" />
  </connectionStrings>
  
  <startup>
    <supportedRuntime version="v4.0" sku=".NETCoreApp,Version=v9.0" />
  </startup>
</configuration>